<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refered Center
"/>
    <Spinner
        android:id="@+id/sp_ReferedCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refered Service Type"/>
    <Spinner
        android:id="@+id/sp_ReferedService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refered By
"/>
    <Spinner
        android:id="@+id/sp_ReferedBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Of Preparer"/>
    <EditText
        android:id="@+id/edt_NameOfPreparer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designation Of Preparer"/>
    <EditText
        android:id="@+id/edt_DesugnationOfPreparer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remark"/>

    <EditText
        android:id="@+id/edt_Remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        />
</LinearLayout>
